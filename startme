export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"  # This loads nvm
nvm use

VERSION=""
VERSION=$(meteor --version)
[ "$VERSION" == "" ] && ( curl https://install.meteor.com/ | sh )

PIDS=$(ps -ef | grep meteor | grep -v grep |  awk '{ print $2 }')

[ "$PIDS" == "" ] && meteor
